#include <unistd.h>

voidft_putnbr(int nb);
intfind_number(int nb);
voidprint_int(int tmp);
intremains(int nb, int tmp, int n);

voidft_putnbr(int nb)
{
if (nb == -2147483648)
write(1, "-2147483648", 11);
else if (nb < 0)
{
write(1, "-", 1);
nb *= -1;
}
else if (nb == 0)
write(1, "0", 1);
while (nb > 0)
nb = find_number(nb);
}
intfind_number(int nb)
{
inttmp;
intn;

tmp = nb;
n = 0;
while (tmp > 9)
{
tmp /= 10;
n += 1;
}
print_int(tmp);
return (remains(nb, tmp, n));
}

voidprint_int(int tmp)
{
tmp += 48;
write(1, &tmp, 1);
}

intremains(int nb, int tmp, int n)
{
while (n-- > 0)
tmp *= 10;
return (nb - tmp);
}
